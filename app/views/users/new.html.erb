<h1 class="center">Create an Account</h1>

<%= form_for @user do |f| %>
	<div class="input-group">
	  <%= f.label :first_name %><br>
	  <%= f.text_field :first_name, class: "form-control" %>
	</div>
	<div class="input-group">
	  <%= f.label :last_name %><br>
	  <%= f.text_field :last_name, class: "form-control" %>
	</div>
	<div class="input-group">
	  <%= f.label :email %><br>
	  <%= f.email_field :email, class: "form-control" %>
	</div>
	<div class="input-group">
	  <%= f.label :username %><br>
	  <%= f.text_field :username, class: "form-control" %>
	</div>
	<div class="input-group">
	  <%= f.label :password %><br>
	  <%= f.password_field :password, class: "form-control" %>
	</div>
	<div class="input-group">
	  <%= f.label :password_confirmation %><br>
	  <%= f.password_field :password_confirmation, class: "form-control" %>
	</div>
	<div class="input-group">
	  <%= f.label :birthday %><br>
	  <%= f.date_select :birthday, start_year: Date.today.year - 99, end_year: Date.today.year - 18, default: {year: Date.today.year - 18} %>
	</div>
	<div class="input-group">
	  <%= f.label :gender_id %><br>
	  <%= select_tag(:gender_id, options_for_select([['', 0], ['male', 1], [
	    'female', 2]])) %>
	</div>
	<div class="input-group">
	  <%= f.label :sexual_orientation_id %><br>
	  <%= select_tag(:sexual_orientation_id, options_for_select([['', 0], ['straight', 1], ['gay', 2], ['lesbian', 3], ['bi', 4], ['trans', 5], ['queer', 6], ['asexual', 7]])) %>
	</div>
	<div class="input-group">
	  <%= f.label :sexual_preference_id %><br>
	  <%= select_tag(:sexual_preference_id, options_for_select([['', 0], ['male', 1], ['female', 2], ['male & female', 3]])) %>
	</div>
	<div class="input-group">
	  <%= f.label :zip_code %><br>
	  <%= f.text_field :zip_code %>
	</div>
	<div class="center input-group">
	  <%= f.submit :submit, class: 'submit btn btn-default' %>
	</div>
<% end %>

<% if @errors %>
  <ul>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>
