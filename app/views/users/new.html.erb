<%= form_for @user do |f| %>
<table>
<tr>
  <td><%= f.label :first_name %></td>
  <td><%= f.text_field :first_name %></td>
</tr>
<tr>
  <td><%= f.label :last_name %></td>
  <td><%= f.text_field :last_name %></td>
</tr>
<tr>
  <td><%= f.label :email %></td>
  <td><%= f.email_field :email %></td>
</tr>
<tr>
  <td><%= f.label :username %></td>
  <td><%= f.text_field :username %></td>
</tr>
<tr>
  <td><%= f.label :password %></td>
  <td><%= f.password_field :password %></td>
<tr>
  <td><%= f.label :password_confirmation %></td>
  <td><%= f.password_field :password_confirmation %></td>
</tr>
<tr>
  <td><%= f.label :birthday %></td>
  <td><%= f.date_select :birthday, :default => {:year => Time.now.year, :month => 'Jan', :day => 1}, :start_year => Time.now.year - 18, :end_year => 1920 %></td>
</tr>
<tr>
  <td><%= f.label :gender %></td>
  <td><%= select_tag(:gender_id, options_for_select([['', 0], ['male', 1], [
    'female', 2]])) %></td>
</tr>
<tr>
  <td><%= f.label :sexual_orientation %></td>
  <td><%= select_tag(:sexual_orientation_id, options_for_select([['', 0], ['straight', 1], [
    'gay', 2], ['lesbian', 3], ['bi', 4], ['trans', 5], ['queer', 6], ['asexual', 7]])) %></td>
</tr>

<tr>
  <td><%= f.label :zip_code %></td>
  <td><%= f.text_field :zip_code %></td>
</tr>
<tr>
  <td colspan='2'><%= f.submit :submit %></td>
</tr>
</table>
<% end %>

<% if @errors %>
  <ul>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>


